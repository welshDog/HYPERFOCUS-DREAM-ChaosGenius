# üîê ChaosGenius Environment Configuration Example
# =================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Discord Bot Configuration
# Get your token from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_SECRET_KEY=your_secret_key_here

# Database Configuration
DATABASE_URL=sqlite:///chaosgenius.db
DATABASE_BACKUP_ENABLED=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_RATE_LIMIT=100

# AI Squad Configuration
AI_SQUAD_TIMEOUT=300
AI_SQUAD_MAX_CONCURRENT=3

# Business Metrics
TARGET_REVENUE=5000
CURRENT_PHASE=1
EMPIRE_NAME=ChaosGenius

# Security Settings
ENABLE_AUTH=true
ENABLE_API_KEYS=false
SECURE=false
SESSION_TIMEOUT=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
ALLOWED_EXTENSIONS=txt,json,md,py

# Analytics Configuration
ANALYTICS_ENABLED=true

# Backup Configuration
BACKUP_DIRECTORY=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=chaosgenius.log
LOG_MAX_SIZE=10MB

# üöÄ HYPERFOCUS DREAM - Social Media API Configuration
# =====================================================
# Add your real API credentials here to enable live data feeds

# Etsy Shop API Configuration
# Get these from: https://www.etsy.com/developers/
ETSY_API_KEY=your_etsy_api_key_here
ETSY_SHOP_ID=your_etsy_shop_id_here

# TikTok Business API Configuration  
# Get these from: https://developers.tiktok.com/
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_ADVERTISER_ID=your_tiktok_advertiser_id_here

# Optional: Additional Platform APIs
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here
FACEBOOK_PAGE_TOKEN=your_facebook_token_here
SHOPIFY_API_KEY=your_shopify_key_here

# Database Configuration
DATABASE_URL=sqlite:///chaosgenius.db

# Security Settings
SECRET_KEY=your_secret_key_for_sessions
API_RATE_LIMIT=100
CACHE_DURATION=300

# Dashboard Configuration
DASHBOARD_PORT=5000
DASHBOARD_HOST=localhost
DEBUG_MODE=true

# Analytics Settings
ENABLE_REAL_TIME_UPDATES=true
METRIC_REFRESH_INTERVAL=60
ENABLE_CACHING=true

# üìã SETUP INSTRUCTIONS:
# 1. Replace the placeholder values with your real API credentials
