            return False
        except Exception as e:
            print(f"\n{Fore.RED}âŒ Deployment error: {e}{Style.RESET_ALL}")
            self.logger.error(f"Deployment failed: {e}")
            self.log_to_dashboard("Deployment Failed", str(e))
            return False

