#!/usr/bin/env python3
from flask import Flask, render_template_string
import os, time, psutil

app = Flask(__name__)
BOT_PID_FILE = "/root/chaosgenius/discord_bot.pid"
LOG_FILE = "/root/chaosgenius/discord_bot.log"
START_TIME = time.time()

@app.route("/")
def stealth_monitor():
    bot_status = "OFFLINE"
    pid = None
    mem = cpu = 0
    logs = []

    if os.path.isfile(BOT_PID_FILE):
        with open(BOT_PID_FILE) as f:
            pid = int(f.read().strip())
            if psutil.pid_exists(pid):
                bot_status = "ONLINE"
                p = psutil.Process(pid)
                mem = round(p.memory_info().rss / (1024 * 1024), 2)
                cpu = p.cpu_percent(interval=0.5)

    if os.path.isfile(LOG_FILE):
        with open(LOG_FILE, "r") as log:
            logs = log.readlines()[-5:]

    return render_template_string("""
    <html><head><title>[ STEALTH MONITOR ACTIVE ]</title>
    <style>
    body { background: #000; color: #0f0; font-family: monospace; padding: 20px; }
    h1 { color: #0ff; }
    .data { margin-bottom: 10px; }
    .log { background: #111; padding: 10px; border: 1px solid #0f0; max-height: 200px; overflow-y: auto; }
    </style></head>
    <body>
    <h1>[:: BROskiâˆ DISCORD MONITOR ::]</h1>
    <div class="data">ğŸ§  Status: <b>{{status}}</b> | PID: <b>{{pid}}</b></div>
    <div class="data">ğŸ’¾ Mem: <b>{{mem}}MB</b> | ğŸ” CPU: <b>{{cpu}}%</b> | â±ï¸ Uptime: <b>{{uptime}}s</b></div>
    <div class="log">
    <b>ğŸ“ Last Logs:</b><br>{{ logs }}
    </div>
    </body></html>
    """, status=bot_status, pid=pid, mem=mem, cpu=cpu,
       logs="".join(logs).replace("\n", "<br>"),
       uptime=int(time.time() - START_TIME))

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5001)
